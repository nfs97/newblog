{% extends 'AppBundle::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('bundles/app/css/main.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}

    {#            #}{# sorting of properties based on query components #}{#
                <p{% if pagination.isSorted('a.Title') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Title', 'a.title') }}</p>
                <p>{{ knp_pagination_sortable(pagination, 'Release', ['a.date', 'a.time']) }}</p>#}
    {% for post in pagination %}
        <a href="{{ path('post_show', { 'id': post.id }) }}"><h3>{{ post.title }}</h3></a>
        <p>{{ post.description }}</p>
    {% endfor %}
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}
